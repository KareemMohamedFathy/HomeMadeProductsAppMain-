<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical"
    >

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewStoreName"
            android:layout_width="0dp"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:textColor="@android:color/black"

            app:layout_constraintStart_toEndOf="@id/imageViewStoreLogo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />


        <TextView
            android:id="@+id/textViewStoreDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/imageViewStoreLogo"
            app:layout_constraintTop_toBottomOf="@id/textViewStoreName"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#757575"
            />

        <TextView
            android:id="@+id/textViewCategoryName"
            android:layout_width="0dp"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@id/imageViewStoreLogo"
            app:layout_constraintTop_toBottomOf="@id/textViewStoreDescription"
            app:layout_constraintEnd_toEndOf="parent"
            />


        <ImageView
            android:id="@+id/imageViewStoreLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="5dp"
            android:background="#CCFAFAFA"
            android:scaleType="fitXY"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>