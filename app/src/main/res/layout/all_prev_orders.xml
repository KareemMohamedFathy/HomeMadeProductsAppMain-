<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    android:orientation="vertical"
    android:padding="8dp"

    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAFAFA"

        >

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="8dp"
        android:background="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="8dp"
        android:id="@+id/storeLogo"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@id/storeLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp"

        android:id="@+id/textViewStoreName"
        android:textColor="@android:color/black"

        />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/storeLogo"
            app:layout_constraintEnd_toStartOf="@+id/textViewOrderPrice"
            app:layout_constraintTop_toBottomOf="@+id/textViewOrderID"
            android:layout_margin="8dp"

            android:textSize="15sp"
            android:textColor="@android:color/black"


            android:id="@+id/textViewOrderDate"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/textViewOrderDate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewOrderID"
            android:layout_margin="16dp"

            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"

            android:id="@+id/textViewOrderPrice"
            />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/storeLogo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewStoreName"
            android:layout_margin="16dp"

            android:id="@+id/textViewOrderID"
            android:textColor="@android:color/darker_gray"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>